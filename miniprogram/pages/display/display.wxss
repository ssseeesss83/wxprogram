.container .box span{
  display:block;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 20;
}

.container .box span::before{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  background-color: rgba(255,255,255,0.1);
  opacity: 0;
  transition: 0.5s;
  animation: animate 2s ease-in-out infinite;
}

.container .box:hover span::before{
  top: -50rpx;
  left: 50rpx;
  width: 100rpx;
  height: 100rpx;
  opacity: 1;
}
@keyframes animate{
  0%,
  100%{
      transform: translateY(50rpx);
  }
  50%{
      transform: translateX(-50rpx);
  }
}

.container .box span::after{
  content: "";
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  background-color: rgba(255,255,255,0.1);
  opacity: 0;
  transition: 0.5s;
  animation: animate 2s ease-in-out infinite;
  animation-delay: -1s;
}

.container .box:hover span::after{
  bottom: -50rpx;
  right: 50rpx;
  width: 100rpx;
  height: 100rpx;
  opacity: 1;
}

.container .box .content{
  z-index: 1;
  display: block;
  position: relative;
  left: 0;
  color: #FFF;
  padding: 20rpx 40rpx;
  background-color: rgba(255,255,255,0.1);
  border-radius: 8rpx;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.1);
  backdrop-filter: blur(10rpx);
  transition: 0.5s;
}

.container .box:hover .content{
  left: 0rpx;
  padding: 30rpx 20rpx;
}

.container .box .content h2{
  font-size: 1.4em;
  color: #fff;
  margin-bottom: 10rpx;
}

.container .box .content p{
  font-size: 1em;
  margin-bottom: 10rpx;
  line-height: 1.5em;
}

.bigtitle{
  justify-content: center;
  align-items: center;
}

.bigtitle h1{
  top:0;
  color:#333;
  font-family: sans-serif;
  position: relative;
  margin: 0;
  padding: 0;
  font-size: 3rem;
  letter-spacing: -0.3rem;
}

.bigtitle h1::after{
  content: attr(data-spotlight);
  color: yellow;
  position: absolute;
  top: 0;
  left: 0;
  -webkit-clip-path: ellipse(100rpx 100rpx at 0% 50%);
  clip-path: ellipse(100rpx 100rpx at 0% 50%);
  animation: spotlight 5s infinite;
}

@keyframes spotlight{
  0%{
      -webkit-clip-path: ellipse(100rpx 100rpx at 0% 50%);
      clip-path: ellipse(100rpx 100rpx at 0% 50%);
  }
  50%{
      -webkit-clip-path: ellipse(100rpx 100rpx at 100% 50%);
      clip-path: ellipse(100rpx 100rpx at 100% 50%);
  }
  100%{
      -webkit-clip-path: ellipse(100rpx 100rpx at 0% 50%);
      clip-path: ellipse(100rpx 100rpx at 0% 50%);
  }
}

