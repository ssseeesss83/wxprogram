view{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  font-family: consolas;
}

page{
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #000;
  min-height: 100vh;
}

.bg{
  width: 100%;
  height: 100%;
  background:url( "./images/bg.jpg") no-repeat;
  top: 0;
  filter: blur(20rpx);
  background-size: cover;
  position: absolute;
  z-index: -20;
}

.container{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  padding: 40rpx 50rpx;
}

.container .box{
  position: relative;
  width: 520rpx;
  height: 400rpx;
  align-items: center;
  margin: 40rpx 30rpx;
}

.container .box::before{
  content: "";
  position:absolute;
  top: 0;
  left: 50rpx;
  width: 50%;
  height: 100%;
  background-color: #FFF;
  border-radius: 8rpx;
  transform: skewX(15deg);
  transition: 0.5s;
}

.container .box:hover::before,
.container .box:hover::after
{
  transform: skewX(0deg);
  left: 20rpx;
  width: calc(100% - 30rpx);
}

.container .box::before{
  content: "";
  position:absolute;
  top: 0;
  left: 50rpx;
  width: 50%;
  height: 100%;
  background-color: #FFF;
  border-radius: 8rpx;
  transform: skewX(15deg);
  transition: 0.5s;
  background-image: linear-gradient(315deg,#444444,#000000);
}

.container .box::after{
  content: "";
  position:absolute;
  top: 0;
  left: 50rpx;
  width: 50%;
  height: 100%;
  background-color: #FFF;
  border-radius: 8rpx;
  transform: skewX(15deg);
  filter: blur(30rpx);
  transition: 0.5s;
  background-image: linear-gradient(315deg,#444444,#000000);
}

