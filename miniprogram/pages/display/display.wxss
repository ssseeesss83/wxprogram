#info .glitch{
  z-index: 50;
  color: rgba(255,255,255,0.8);
  font-size: 70rpx;
  left: 10%;
  margin-top: 100rpx;
  overflow: visible;
  position: absolute;
  letter-spacing: 10rpx;
}

#info .glitch::before{
  content: attr(data-text);
  position: absolute;
  text-shadow: 10rpx 0 rgb(255, 0, 0);
  left: -4rpx;
  clip-path: inset(50rpx 0 0 0);
  animation: gli 0.3s infinite linear alternate-reverse;
  /* background-color: black; */
}

#info .glitch::after{
  content: attr(data-text);
  position: absolute;
  text-shadow: -10rpx 0 rgb(0, 204, 255);
  right: 4rpx;
  animation: gli 0.3s infinite linear alternate-reverse;
  clip-path: inset(-50rpx 50rpx 0 0);
  animation-delay: 0.17s;
  /* background-color: black; */
}

@keyframes gli{
  0%{
      clip-path: inset(-70rpx 31rpx -40rpx 75rpx);
      transform:scaleX(0.4);
      transform:scaleY(1.5);
  }
  25%{
      clip-path: inset(30rpx -68rpx 95rpx -23rpx);
      transform:scaleX(0.4);
      transform:scaleY(0.5);
  }
  50%{
      clip-path: inset(-75rpx 21rpx 31rpx 70rpx);
      transform:scaleX(1.7);
      transform:scaleY(1.4);
  }
  75%{
      clip-path: inset(-20rpx -85rpx 81rpx 31rpx);
      transform:scaleX(0.5);
      transform:scaleY(0.3);
  }
  100%{
      clip-path: inset(84rpx 25rpx -23rpx -81rpx);
      transform:scaleX(1);
      transform:scaleY(1.4);
  }
}

#video{
  top: 0;
  position: absolute;
  z-index: -10;
}

#video::after{
  position: absolute;
  content: "";
  width: 100%;
  height: 100%;
  top:0;
  right:0;
  box-shadow: 0 0 150rpx 150rpx black inset;
}

.gallery{
  top:0%;
  position: absolute;
  margin-top: 220%;
  bottom: 0%;
  z-index: -20;
}


.gallery::after{
  position: absolute;
  content: "";
  width: 100%;
  height: 100%;
  top:0;
  right:0;
  box-shadow: 0 0 150rpx 350rpx black inset;
}